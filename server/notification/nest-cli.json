{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      { "include": "asset/**", "outDir": "dist" },
      { "include": "proto/**", "outDir": "dist" }
    ],
    "watchAssets": true,
    "webpack": true,
    "webpackConfigPath": "webpack-hmr.config.js",
    "builder": "swc",
    "typeCheck": true
  }
}
